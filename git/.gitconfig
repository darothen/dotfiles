[user]
	name = Daniel Rothenberg
	email = daniel@danielrothenberg.com
[core]
	editor = emacs -nw
	excludesfile = $HOME/.gitignore_global
[merge]
	tool = diffmerge
[pull]
	rebase = true
[alias]
	co = checkout
	ci = commit
	br = branch

	# list files in repo
	ls = ls-tree --full-tree -r HEAD

	# verbose pull
	pv = pull -v

	# friendly statuses
	st = status -sb

	# Add all unstaged changes/removals and commit. Just need to pass message
	# example: git ac 'My message'
	ac = !git add -A && git commit -m
	
	# Pretty log
	lg = log --decorate --stat --graph --pretty=format:'%C(yellow)%h%Creset (%ar - %Cred%an%Creset), %s%n'

	# Pretty visual tree
	tree = "log --oneline --decorate --all --graph"

	# Quickly get short git commit of HEAD
	ver = describe --always --match v[0-9]*

        # LaTeX diffs
        ldiff = difftool -t latex
[color]
	ui = auto
	branch = auto
	interactive = auto
	diff = auto

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
	
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true

[diff]
	tool = diffmerge
[difftool]
	prompt = false
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[difftool.latex]
    cmd = git-latexdiff \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	trustExitCode = true
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge --skip -- %f
	required = true
	process = git-lfs filter-process --skip
[diff "jupyternotebook"]
	command = git-nbdiffdriver diff
[merge "jupyternotebook"]
	driver = git-nbmergedriver merge %O %A %B %L %P
	name = jupyter notebook merge driver
[difftool "nbdime"]
	cmd = git-nbdifftool diff \"$LOCAL\" \"$REMOTE\"
[mergetool "nbdime"]
	cmd = git-nbmergetool merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[mergetool]
	prompt = false
[init]
	defaultBranch = main

# "Clearly Better" configurations from 
# https://blog.gitbutler.com/how-git-core-devs-configure-git/
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
[help]
	autocorrect = prompt
[commit]
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
[credential]
	helper = store
